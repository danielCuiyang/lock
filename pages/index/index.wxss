.userinfo {
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: rgb(236,101,95);
    padding-bottom: 25rpx;
}
  
.userinfo_avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}
  
.userinfo_nickname {
    color: #fff;
}

.business_info{
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding:20rpx 20rpx 0rpx 40rpx;    
}
.account{
    line-height: 60rpx;
    font-size: 11pt;
    color:#888;
}
.account_price{
    line-height: 60rpx;
    font-size: 16pt;
    color:#F44444;
    padding-bottom: 20rpx;
    border-bottom:1px solid #ededed;
}
.weui_accounts{
    padding:30rpx 20rpx 0rpx 40rpx;
}
.weui_account{
    padding-bottom: 10rpx;
    border-bottom: 1px solid #ededed;

}
.order{
    text-align: left;
    font-family: Regular;
    font-size: 11pt;
    color:#888;
}
.order_msg{
    font-family: 'Light';
    text-align: left;
    font-size: 16pt;
    color:#000;
}
.weui-grids{
    border:none;
    padding:10rpx;
}
.weui-grid{
    border:none;
}
.weui-grid__icon {
    width:64px;
    height: 64px;
}
.weui-grid__label {
    margin-top: 10px;
    color:#888;

}
.weui-grid__label_c{
    color:#f44444;
    margin: 0;
}
.mask{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 222;
    background: rgba(0,0,0,.6);
}
.mask_box{
    width:550rpx;
    height: 400rpx;
    border-radius: 15rpx;
    background: #fff;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
}
.mask_box .title{
    font-size: 28rpx;
    height: 98rpx;
    line-height: 98rpx;
    color:#181818;
    text-align: center;
    border-bottom: 1px solid #f3f3f3;
}
.mask_box .content{
    text-align: left;
    color:#ad7d7d;
    padding:15rpx;
    border-bottom: 1px solid #f3f3f3;
}
.login_btn{
    width:200rpx;
    border-radius: 10rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color:#fff;
    background: #6485ca;
    margin:auto;
    margin-top: 40rpx;
}