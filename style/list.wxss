.list{
    padding:40rpx 40rpx;
    padding-top: 115rpx;
}
.list_box{
    border:1px solid #ededed;
    border-radius: 5px;
    margin-bottom: 48rpx;
    position: relative;
}
.list_box .price{
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    color:#fa5654;
    font-size: 32rpx;
    padding:0;
}
.list_box > view{
    padding:10rpx 20rpx 0 ;
}
.list_box .remark{
    width:48px;
    height: 48px;
    padding:0;
    position: absolute;
    top: 280rpx;
    right:60rpx;
}
.list_box .normal_remark{
    top: 295rpx;
}
.list_box .special_remark{
    top: 190rpx;
}

.list_box .remark image{
    width:100%;
    height: 100%;
}
.label{
    font-size: 10pt;
    color:#888;
    width:70px;
    display:inline-block;
}
.content{
    color:#181818;
    font-size: 28rpx;
}
.exception{
    color:#f44444;
    margin-left: 20rpx;
}
.address {
    display: flex;
}
.address .content{
    flex:1;
}
.content_time{
    margin-left: 20rpx;
}
.repair{
    color:#f44444;
}
.list_box .btn{
    padding: 0;
}
.btn{
    display: flex;
    padding: 0;
    margin-top: 8rpx;
}
.btn button{
    flex:1;
    background: rgb(242,157,56);
    color:#fff;
    font-size: 28rpx;
    box-sizing: border-box;
    line-height: 88rpx;
}
.btn .line{
    width:1rpx;
    background: #f5f5f5;
}
.btn .btn_detail{
    background: rgb(78,153,247);
}
.btn .special_fc{
    color:#67c23a;
background:#fff;
}
