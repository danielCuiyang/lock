/* dialog */

.mask{
    position: fixed;
    top: 0;
    left: 0;
    bottom:0;
    right: 0;
    background: rgba(0,0,0,0.65);

}
.dialog_time{
    position: fixed;
    top: 0;
    left: 0;
    bottom:0;
    right: 0;
    margin: auto;
    width: 560rpx;
    height: 550rpx;
    box-sizing: border-box;
    /* border:1px solid #dddddd; */
    border-bottom-left-radius: 5rpx;
    border-bottom-right-radius: 5rpx;
    border-radius: 8rpx;
    background: #fff;
    z-index: 3;
}
.dialog_time .title{
    text-align: center;
    font-size: 28rpx;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1px solid #ededed;
}
.dialog_time .content{
    padding:30rpx 50rpx;
}
.dialog_time .label{
    font-size: 24rpx;
}
.dialog_time .date{
    padding: 10rpx;
    box-sizing: border-box;
    border:1px solid #f1f1f1;
    border-radius: 5px;
    margin-top: 8rpx;
    color:#408a63;
    padding-left: 30rpx;
    position: relative;
    margin-bottom:30rpx;
}
.dialog_time .time{
    margin-bottom:0;
}
.date_icon{
    width:16px;
    height: 16px;
    position: absolute;
    right: 30rpx;
    top: 50%;
    margin-top: -8px;
}
.dialog_time .btn{
    position: absolute;
    bottom:0;
    width:100%;
    border-top: 1px solid #f1f1f1;
}
.dialog_time .btn .fc{
    background: #fff;
    color:#408a63;
}
.dialog_time .cancel_btn{
    border-top: 1px solid #dddddd;
}
.remark .content{
    height: 350rpx;
    max-height: 350rpx;
    box-sizing: border-box;
    overflow: scroll;
    color:#181818;
    font-size: 32rpx;
}
.remark .content .textarea{
    width:100%;
    height: 100%;
}
.complete_dialog {
    height: 330rpx;
}
.complete_dialog .tip{
    height: 140rpx;
    padding: 10rpx 30rpx 10rpx 80rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    position: relative;

}
.complete_dialog .tip_c{
    display: inline;
    color: #8f806e;
}
.complete_dialog .tip_fc{
    color: #ff8212;
}
.complete_dialog .tip_icon{
    width: 14px;
    height: 14px;
    position: absolute;
    top:14rpx;
    left:30rpx;
}
.complete_dialog .tip_icon image{
    width:100%;
    height:100%;

}

.btn{
    display: flex;
    padding: 0;
    margin-top: 8rpx;
}
.btn button{
    flex:1;
    background: rgb(242,157,56);
    color:#fff;
    font-size: 28rpx;
    box-sizing: border-box;
    line-height: 88rpx;
}
.btn .line{
    width:1rpx;
    background: #f5f5f5;
}
.btn .btn_detail{
    background: rgb(78,153,247);
}